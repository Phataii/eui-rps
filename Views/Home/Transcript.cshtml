<!-- JavaScript to Update Amount, Generate Reference Number, and Handle Paystack Payment -->
<script>
    // Function to update the amount based on the selected transcript type
    function updateAmount() {
        const transcriptType = document.getElementById("type").value;
        const amounts = {
            scholarship: 500000, // Amount in kobo (₦5,000)
            graduate: 700000,   // Amount in kobo (₦7,000)
            transfer: 1000000,  // Amount in kobo (₦10,000)
            pg: 1500000,        // Amount in kobo (₦15,000)
            student_copy: 300000 // Amount in kobo (₦3,000)
        };
        document.getElementById("amount").value = `₦${(amounts[transcriptType] / 100).toLocaleString()}`;
    }

    // Function to generate a timestamp-based reference number
    function generateRef() {
        const now = new Date();
        const ref = `REF-${now.getFullYear()}${String(now.getMonth() + 1).padStart(2, '0')}${String(now.getDate()).padStart(2, '0')}-${String(now.getHours()).padStart(2, '0')}${String(now.getMinutes()).padStart(2, '0')}${String(now.getSeconds()).padStart(2, '0')}`;
        document.getElementById("refNo").value = ref;
    }

    // Function to initialize Paystack payment
   async function payWithPaystack() {
    const email = document.getElementById("email").value;
    const amount = document.getElementById("amount").value.replace(/[^0-9]/g, ''); // Remove non-numeric characters
    const ref = document.getElementById("refNo").value;

    if (!email || !amount || !ref) {
        alert("Please fill in all fields before proceeding.");
        return;
    }

    // Prepare the data to submit to your API
    const formData = {
        email: email,
        amount: amount,
        refNo: ref,
        type: document.getElementById("type").value
    };

    try {
        // Submit the form data to your API
        const response = await fetch('/api/transcript/paystack-form', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(formData),
        });

        if (!response.ok) {
            throw new Error('Failed to submit form data');
        }

        const result = await response.json();
        console.log('Form data submitted successfully:', result);

        // If the API call is successful, proceed with Paystack payment
        const handler = PaystackPop.setup({
            key: 'pk_test_18de9362e665b126982fc285e8f819fd74862be6', // Replace with your Paystack public key
            email: email,
            amount: amount * 100, // Convert amount to kobo
            ref: ref,
            currency: 'NGN',
            callback: function (response) {
                window.location.href = `/api/transcript/success?reference=${response.reference}`;
                @* alert("Payment successful! Reference: " + response.reference); *@
                // You can redirect the user or perform other actions here
            },
            onClose: function () {
                alert("Payment window closed.");
            },
        });
        handler.openIframe();
    } catch (error) {
        console.error('Error submitting form data:', error);
        alert('An error occurred while submitting the form. Please try again.');
    }
}
    // Initialize the amount and reference fields on page load
    document.addEventListener("DOMContentLoaded", function () {
        updateAmount();
        generateRef();
    });
</script>
