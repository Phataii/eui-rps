@{
    ViewData["Title"] = "Admin Settings";
}
<div class="app-wrapper">
    <div class="app-content">
        <!-- Body main section starts -->
        <main>
            <div class="container">
                <div class="row">
                    <h2 class="mb-4">Manage Result System</h2>

                    <!-- Button block -->
                    <div class="col-md-4 mb-3">
                        <a href="/api/result/UpdateAllResultGrades" class="btn btn-warning w-100">
                            Update all result grades
                        </a>
                    </div>

                    <div class="col-md-4 mb-3">
                        <a href="level-advisers" class="btn btn-warning w-100">
                            Manage Level Advisers
                        </a>
                    </div>

                    <div class="col-md-4 mb-3">
                        <a href="admin/uploadresults" class="btn btn-warning w-100">
                            Upload Results
                        </a>
                    </div>

                    <div class="col-md-4 mb-3">
                        <button id="generatePasswords" class="btn btn-warning">Generate Passwords for All Users</button>
                    </div>

                    <div class="col-md-4 mb-3">
                        <a href="admin/approvals" class="btn btn-warning w-100">
                            Approve Results
                        </a>
                    </div>

                    <div class="col-md-4 mb-3">
                        <a href="admin/users" class="btn btn-warning w-100">
                            Manage Users
                        </a>
                    </div>

                    <div class="col-md-4 mb-3">
                        <a href="admin/resetpasswords" class="btn btn-warning w-100">
                            Reset Passwords
                        </a>
                    </div>

                    <div class="col-md-4 mb-3">
                        <a href="admin/viewlogs" class="btn btn-warning w-100">
                            View Logs
                        </a>
                    </div>

                    <div class="col-md-4 mb-3">
                        <a href="admin/settings" class="btn btn-warning w-100">
                            System Settings
                        </a>
                    </div>
                     @* <form action="/api/grade/upload-for-all" enctype="multipart/form-data" method="post">
                              <label>Upload Grades </label>
                              <input class="form-control mt-2 border p-2" type="text" id="type" name="type" value="ug" required>
                              <input class="form-control mt-2 border p-2" type="file" id="file" name="file" accept=".csv" required>
                              <button class="btn btn-primary w-100 mt-3" type="submit">Submit</button>
                    </form> *@
                    <!-- End button block -->
                </div>
            </div>
        </main>
    </div>
</div>
<script>
    document.getElementById("generatePasswords").addEventListener("click", function () {
        fetch("/api/auth/generate-temp-passwords", {
            method: "POST"
        }).then(response => {
            if (response.ok) {
                alert("Temporary passwords generated and sent successfully.");
            } else {
                alert("Something went wrong!");
            }
        });
    });
</script>